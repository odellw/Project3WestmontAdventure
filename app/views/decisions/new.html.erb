<center>
<h2>Add a new Decision</h2>
<h5>
  Context:
  <%=@scene.sceneName %> , <%=@scene.description%>
  </h5>
</center>

<div class="container">
<%= form_for :decision, :url => {:action => "create", :id => @scene} do |f| %>
  <p>
    <%= f.label :Decision_description %><br>
    <%= f.text_area(:decisionDescription,
    {:class => 'form-control' }) %>
  </p>
</div>
<center>
  <p>
    <%= f.label :Scene_to_go_to %><br>
    <%= f.select :sceneToGoTO, options_for_select(@scenes.collect{ |u| [u.sceneName, u.id] }) %>
  </p>
  <p>
  <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>

  <% end %>
  </center>
