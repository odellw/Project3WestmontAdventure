<h1>Add A New Scene</h1>

<%= form_for :scene, url: adventure_scenes_path do |f| %>
<% if @scene.errors.any? %>
  <% @scene.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <p>
    <%= f.label :adventure %><br>
    <%= f.select :adventure, options_for_select(Adventure.all) %>
</p>

<p>
  <%= f.label :sceneName %><br>
  <%= f.text_field( :sceneName, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area( :description, {:class => 'form-control'}) %>
</p>

<p>
<%= f.submit({:class => 'btn btn-primary'}) %>
</p>

<% end %>
