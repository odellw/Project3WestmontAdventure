<h1>Edit Adventure</h1>

<%= form_for :adventure, url: adventure_path(@adventure), method: :patch do |f| %>
<% if @adventure.errors.any? %>
  <% @adventure.errors.full_messages.each do |msg| %>
    <div class="aler alert-danger"><%= msg %></div>
    <% end %>
  <% end %>


  <p>
    <%= f.label :name %><br>
    <%= f.text_field( :name, {:class => 'form-control'}) %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area( :description, {:class => 'form-control'}) %>
  </p>

  <p>
    <%= f.label :creator %><br>
    <%= f.text_field( :creator, {:class => 'form-control'}) %>
  </p>


  <p>
  <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>

<% end %>
